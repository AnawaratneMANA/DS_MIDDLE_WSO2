<?xml version="1.0" encoding="UTF-8"?>
<api context="/items" name="ItemApi" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/getitems">
        <inSequence>
            <log/>
            <send>
                <endpoint key="Items"/>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
        <faultSequence/>
    </resource>
    <resource methods="POST" uri-template="/additems">
        <inSequence>
            <log/>
            <send>
                <endpoint key="AddItems"/>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
        <faultSequence/>
    </resource>
    <resource methods="POST" uri-template="/validateuser">
        <inSequence>
            <log/>
            <send>
                <endpoint key="Validate"/>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
        <faultSequence/>
    </resource>
</api>
